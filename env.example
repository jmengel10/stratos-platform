# Notification Services
PUSH_NOTIFICATION_PUBLIC_KEY=your-vapid-public-key
PUSH_NOTIFICATION_PRIVATE_KEY=your-vapid-private-key
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# Additional Notification Services
FIREBASE_SERVER_KEY=your-firebase-server-key
ONESIGNAL_APP_ID=your-onesignal-app-id
ONESIGNAL_API_KEY=your-onesignal-api-key
PUSHER_APP_ID=your-pusher-app-id
PUSHER_KEY=your-pusher-key
PUSHER_SECRET=your-pusher-secret
PUSHER_CLUSTER=your-pusher-cluster

# Rate Limiting
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW=900000

# Feature Flags
ENABLE_AI_CHAT=true
ENABLE_FILE_UPLOAD=true
ENABLE_CALENDAR_INTEGRATION=true
ENABLE_BILLING=true
ENABLE_ANALYTICS=true
ENABLE_NOTIFICATIONS=true

# Development Settings
DEBUG=true
LOG_LEVEL=debug
ENABLE_DEV_TOOLS=true

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=your-redis-password
CACHE_TTL=3600

# Security Headers
CSP_POLICY=default-src 'self'; script-src 'self' 'unsafe-inline' 'unsafe-eval'
HSTS_MAX_AGE=31536000

# Additional Development Variables
DEV_MODE=true
MOCK_DATA=true
DISABLE_AUTH=false
ENABLE_DEBUG_ROUTES=true

# Document Processing & AI Services
UNSTRUCTURED_API_KEY=your-unstructured-api-key
PAPERLESS_API_KEY=your-paperless-api-key
DOCUMENT_AI_API_KEY=your-document-ai-api-key

# Search & Vector Database
