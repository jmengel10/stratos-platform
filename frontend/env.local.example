# StratOS Platform - Frontend Environment Variables
# Copy this file to .env.local and fill in the values

# ============================================
# Azure AD B2C Configuration (Public)
# ============================================
# These are exposed to the browser (NEXT_PUBLIC_ prefix)

# B2C tenant name
NEXT_PUBLIC_AZURE_AD_B2C_TENANT_NAME=stratos-platform

# B2C tenant domain
NEXT_PUBLIC_AZURE_AD_B2C_DOMAIN=stratos-platform.b2clogin.com

# Application (client) ID
NEXT_PUBLIC_AZURE_AD_B2C_CLIENT_ID=your-client-id-here

# Primary user flow for sign-up and sign-in
NEXT_PUBLIC_AZURE_AD_B2C_PRIMARY_USER_FLOW=B2C_1_signupsignin

# Profile editing flow
NEXT_PUBLIC_AZURE_AD_B2C_PROFILE_EDIT_FLOW=B2C_1_profileediting

# Password reset flow
NEXT_PUBLIC_AZURE_AD_B2C_PASSWORD_RESET_FLOW=B2C_1_passwordreset

# ============================================
# API Configuration (Public)
# ============================================
# Backend API base URL
NEXT_PUBLIC_API_BASE_URL=http://localhost:7071/api

# Application Insights connection string for frontend telemetry
NEXT_PUBLIC_APPINSIGHTS_CONNECTION_STRING=InstrumentationKey=your-key-here

# ============================================
# Application Configuration (Public)
# ============================================
# Application name
NEXT_PUBLIC_APP_NAME=StratOS Platform

# Application version
NEXT_PUBLIC_APP_VERSION=1.0.0

# Environment
NEXT_PUBLIC_ENVIRONMENT=development

# ============================================
# Feature Flags (Public)
# ============================================
# Enable/disable features in the UI
NEXT_PUBLIC_ENABLE_ANALYTICS=true
NEXT_PUBLIC_ENABLE_CHAT_HISTORY=true
NEXT_PUBLIC_ENABLE_ARTIFACT_EXPORT=true
NEXT_PUBLIC_ENABLE_DARK_MODE=true

# ============================================
# Private Environment Variables
# ============================================
# These are NOT exposed to the browser (no NEXT_PUBLIC_ prefix)

# Azure AD B2C client secret (server-side only)
AZURE_AD_B2C_CLIENT_SECRET=your-client-secret-here

# NextAuth secret (generate with: openssl rand -base64 32)
NEXTAUTH_SECRET=your-nextauth-secret-generate-a-strong-random-string

# NextAuth URL (your app URL)
NEXTAUTH_URL=http://localhost:3000

# ============================================
# Optional: Analytics & Monitoring
# ============================================
# Google Analytics ID (optional)
NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX

# Sentry DSN for error tracking (optional)
NEXT_PUBLIC_SENTRY_DSN=https://your-sentry-dsn-here

# ============================================
# Optional: External Services
# ============================================
# Stripe publishable key (for payments, if implemented)
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_XXXXXXXXXX

# ============================================
# Development Settings
# ============================================
# Enable debug mode
NEXT_PUBLIC_DEBUG=false

# Show detailed error messages
NEXT_PUBLIC_SHOW_ERRORS=true

# Enable verbose logging
NEXT_PUBLIC_VERBOSE_LOGGING=false

